<UserControl x:Class="JustinsASS.Gui.Controls.SolutionList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustinsASS.Gui.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="btvConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Name="lvSolutions" Height="auto" ScrollViewer.CanContentScroll="False" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" BorderBrush="LightGray">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Grid Width="200">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Label Content="Head: " Grid.Column="0" Grid.Row="0"/>
                                        <Label Content="Chest: " Grid.Column="0" Grid.Row="1"/>
                                        <Label Content="Arms: " Grid.Column="0" Grid.Row="2"/>
                                        <Label Content="Waist: " Grid.Column="0" Grid.Row="3"/>
                                        <Label Content="Legs: " Grid.Column="0" Grid.Row="4"/>
                                        <Label Content="Talisman: " Grid.Column="0" Grid.Row="5"/>
                                        <Label Content="Decos: " Grid.Column="0" Grid.Row="6"/>
                                        <Label Content="{Binding Path=Contributors.Head}" Grid.Column="1" Grid.Row="0"/>
                                        <Label Content="{Binding Path=Contributors.Chest}" Grid.Column="1" Grid.Row="1"/>
                                        <Label Content="{Binding Path=Contributors.Arms}" Grid.Column="1" Grid.Row="2"/>
                                        <Label Content="{Binding Path=Contributors.Waist}" Grid.Column="1" Grid.Row="3"/>
                                        <Label Content="{Binding Path=Contributors.Legs}" Grid.Column="1" Grid.Row="4"/>
                                        <Label Content="{Binding Path=Contributors.Talisman}" Grid.Column="1" Grid.Row="5"/>
                                        <ItemsControl ItemsSource="{Binding Path=Contributors.Decos}" Width="Auto" Height="Auto" BorderThickness="0" Grid.Column="1" Grid.Row="6">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Label Content="{Binding}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </Grid>
                                    <Grid Width="180">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Column="0" Grid.Row="0" Content="Armor Points: " />
                                        <Label Grid.Column="1" Grid.Row="0" Content="{Binding Path=ArmorPoints}" />
                                        <Label Grid.Column="0" Grid.Row="1" Content="Fire Res: " />
                                        <Label Grid.Column="1" Grid.Row="1" Content="{Binding Path=FireRes}" />
                                        <Label Grid.Column="0" Grid.Row="2" Content="Water Res: " />
                                        <Label Grid.Column="1" Grid.Row="2" Content="{Binding Path=WaterRes}" />
                                        <Label Grid.Column="0" Grid.Row="3" Content="Ice Res: " />
                                        <Label Grid.Column="1" Grid.Row="3" Content="{Binding Path=IceRes}" />
                                        <Label Grid.Column="0" Grid.Row="4" Content="Thunder Res: " />
                                        <Label Grid.Column="1" Grid.Row="4" Content="{Binding Path=ThunderRes}" />
                                        <Label Grid.Column="0" Grid.Row="5" Content="Dragon Res: " />
                                        <Label Grid.Column="1" Grid.Row="5" Content="{Binding Path=DragonRes}" />
                                    </Grid>
                                    <ItemsControl ItemsSource="{Binding Path=Skills}" Width="Auto" Height="Auto" BorderThickness="0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Width="120" Content="{Binding Path=Key, StringFormat=\{0\}: }"/>
                                                    <Label Content="{Binding Path=Value.Level}" Margin="0"/>
                                                    <Label Content="/" Margin="0"/>
                                                    <Label Content="{Binding Path=Value.Max}" Margin="0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Spare Slots: "/>
                                    <ItemsControl ItemsSource="{Binding Path=SpareSlots}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                            <Button Name="btnPin" Style="{StaticResource PinButtonStyle}" Tag="{Binding Path=Index}" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="{Binding Path=CanPin, Converter={StaticResource btvConverter}}" Click="OnClick_Pin" />
                            <Button Name="btnRemove" Style="{StaticResource RemoveButtonStyle}" Tag="{Binding Path=Index}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="{Binding Path=CanRemove, Converter={StaticResource btvConverter}}" Click="OnClick_Remove" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
