<Window x:Class="JustinsASS.Gui.Windows.NewTalismanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustinsASS.Gui.Windows"
        xmlns:controls="clr-namespace:JustinsASS.Gui.Controls"
        mc:Ignorable="d"
        Title="NewTalismanWindow" Height="700" Width="600">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="20">
            <Label Content=" Talisman Name: "/>
            <TextBox Name="tbTalismanName" Width="300" />
        </StackPanel>

        <Grid Name="gridChoosers" Width="520" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
        </Grid>

        <Button Name="btnAddTalisman" Content="Add Talisman" Height="30"  Width="150" Click="OnClick_AddTalisman" Margin="20"/>
    </StackPanel>
</Window>
